// Задание 1.
// Создайте функцию которая возводит переданное число в куб, необходимо вывести в консоль результат 2^3 степени + 3 ^ 3 степени.
let num1 = Number(prompt(`Введите число 1`));
let num2 = Number(prompt(`Введите число 2`));

const rootSquare = (number) => {
    return number * number * number;
}
alert(`Кубический корень числа ${num1} это ${rootSquare(num1)}`);
alert(`Кубический корень числа ${num2} это ${rootSquare(num2)}`);

let sum = rootSquare(num1) + rootSquare(num2);
alert(`Сумма возведенных в куб чисел равна: ${sum}`);


// Задание 2.
// Пользователь вводит с клавиатуры число, если ввёл текст, необходимо вывести что значение задано неверно.
// Создать функцию, которая высчитывает 13% от данного числа и выводит в консоль текст "Размер заработной платы за вычетом налогов равен значение".
let num = Number(prompt(`Введите число`));
if (!Number.isNaN(num)) {
    num;
} else {
    alert(`Значение задано неверно, введите число`);
}
const wage = (salary) => {
    salary = salary * 0.87;
    return salary;
}
alert(`Размер заработной платы за вычетом налогов = ${wage(num)}`);


// Задание 3.
// Пользователь с клавиатуры вводит 3 числа, необходимо создать функцию, которая определяет максимальное значение среди этих чисел.
let num1 = Number(prompt(`Введите число 1`));
let num2 = Number(prompt(`Введите число 2`));
let num3 = Number(prompt(`Введите число 3`));

const minNum = (n1, n2, n3) => {
    if (n1 > n2 && n1 > n3) {
        console.log(`Число ${n1} наибольшее`);
    }
    if (n2 > n1 && n2 > n3) {
        console.log(`Число ${n2} наибольшее`);
    }
    if (n3 > n1 && n3 > n1) {
        console.log(`Число ${n3} наибольшее`);
    }
}
minNum(num1, num2, num3);


// Задание 4.
// Необходимо реализовать четыре функции, каждая функция должна принимать по два числа и выполнять одну из операций (каждая функция выполняет одну из них):
// 1. Сложение
// 2. Разность
// 3. Умножение
// 4. Деление
let num1 = Number(prompt(`Введите число 1`));
let num2 = Number(prompt(`Введите число 2`));

const add = (num1, num2) => {
   alert(`Результат сложения чисел: ${num1 + num2}`);
}
const sub = (num1, num2) => {
    alert(`Результат вычитания чисел: ${num1 - num2}`);
}
const mult = (num1, num2) => {
    alert(`Результат умножения чисел: ${num1 * num2}`);
}
const div = (num1, num2) => {
    alert(`Результат деления чисел: ${num1 / num2}`);
}
add(num1, num2);
sub(num1, num2); 
mult(num1, num2); 
div(num1, num2);


